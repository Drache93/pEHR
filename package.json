{
  "name": "pehr",
  "version": "0.1.0",
  "description": "Production-ready peer-to-peer Electronic Health Record system with patient-controlled data and secure provider access",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "cli": "node src/cli/index.js",
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint src/ --ext .js",
    "pear": "pear run .",
    "electron": "electron src/electron/main.cjs",
    "electron-dev": "electron src/electron/main.cjs --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "ehr",
    "healthcare",
    "p2p",
    "peer-to-peer",
    "holepunch",
    "pear",
    "openehr",
    "hyperdrive",
    "autobase"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "autobase": "^7.13.3",
    "autopass": "^2.2.0",
    "chalk": "^5.0.0",
    "commander": "^12.0.0",
    "corestore": "^7.4.5",
    "electron-store": "^10.1.0",
    "hyperbee": "^2.24.2",
    "hypercore": "^11.10.0",
    "hyperdrive": "^11.0.0",
    "hyperswarm": "^4.11.7",
    "inquirer": "^10.0.0",
    "sodium-native": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/pehr.git"
  },
  "bugs": {
    "url": "https://github.com/username/pehr/issues"
  },
  "homepage": "https://github.com/username/pehr#readme",
  "build": {
    "appId": "com.pehr.app",
    "productName": "pEHR",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.medical"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
